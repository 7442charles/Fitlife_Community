<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Basic Meta -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

  <!-- Title -->
  <title>Fitlife Community | Fitness, Wellness & Healthy Living</title>

  <!-- SEO Meta -->
  <meta 
    name="description" 
    content="Fitlife Community is a holistic gym and wellness community empowering individuals and communities through fitness, healthy living, and sustainable wellbeing."
  />
  <meta name="keywords" content="gym, fitness community, wellness, healthy living, workouts, fitlife" />
  <meta name="author" content="Fitlife Community" />

  <!-- Open Graph / Facebook / WhatsApp -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content="Fitlife Community | Fitness, Wellness & Healthy Living" />
  <meta 
    property="og:description" 
    content="Join Fitlife Community — a holistic fitness and wellness community empowering individuals and communities to live healthier lives."
  />
  <meta property="og:image" content="/images/logo.png" />
  <meta property="og:url" content="https://fitlifecommunity.com" />
  <meta property="og:site_name" content="Fitlife Community" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Fitlife Community | Fitness, Wellness & Healthy Living" />
  <meta 
    name="twitter:description" 
    content="Empowering individuals and communities through holistic fitness, wellness, and healthy living."
  />
  <meta name="twitter:image" content="/images/logo.png" />

  <!-- Favicon (using logo) -->
  <link rel="icon" type="image/png" href="/images/logo.png" />
  <link rel="apple-touch-icon" href="/images/logo.png" />

  <!-- Theme Color (Mobile browsers) -->
  <meta name="theme-color" content="#000000" />

  <!-- Tailwind CSS (Browser CDN) -->
  <script src="https://unpkg.com/@tailwindcss/browser@4" defer></script>
</head>
<body class="bg-white">

<%- include('../partials/header') %>

<section id="heroSection" class="relative w-full h-screen flex items-center justify-center overflow-hidden bg-black transition-all duration-700">
  
  <video 
    id="heroVideo"
    class="absolute inset-0 w-full h-full object-cover md:scale-90 opacity-60 transition-all duration-1000"

    poster="/images/who-is.png"
    playsinline
  >
    <source src="/videos/Rebirth of a Queen - Empowering Women and Communities - Non-Profit Organization Kenya.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>

  <div id="heroContent" class="relative z-10 text-center px-6 max-w-4xl transition-all duration-500">
    <h1 class="text-white text-5xl md:text-7xl font-black uppercase leading-tight mb-6">
      Empowering <span class="text-[#F9BC06]">Communities</span> <br> Through Sport.
    </h1>
    
    <div class="flex flex-col items-center gap-4">
      <button 
        id="playBtn"
        class="group relative z-30 flex items-center justify-center w-20 h-20 bg-[#F9BC06] rounded-full shadow-2xl hover:scale-110 transition-transform duration-300 active:scale-95"
      >
        <svg id="playIcon" class="w-8 h-8 text-black ml-1" fill="currentColor" viewBox="0 0 24 24">
          <path d="M8 5v14l11-7z"/>
        </svg>
        <svg id="pauseIcon" class="hidden w-8 h-8 text-black" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
        </svg>
      </button>
      <span id="playText" class="text-white text-[10px] font-bold uppercase tracking-[0.2em]">Watch Our Story</span>
    </div>
  </div>

  <div id="bottomCurve" class="absolute bottom-0 left-0 w-full h-24 bg-white transition-transform duration-500" style="clip-path: ellipse(150% 100% at 50% 100%);"></div>
</section>

<!-- Desktop Video Modal -->
<div
  id="videoModal"
  class="fixed inset-0 z-[200] hidden items-center justify-center bg-black/80 backdrop-blur-sm"
>
  <div class="relative w-[90%] max-w-5xl aspect-video bg-black rounded-xl overflow-hidden shadow-2xl">
    
    <!-- Close Button -->
    <button
      id="closeModal"
      class="absolute top-4 right-4 z-50 bg-[#F9BC06] text-black w-10 h-10 rounded-full flex items-center justify-center font-black hover:scale-110 transition"
    >
      ✕
    </button>

    <video
      id="modalVideo"
      class="w-full h-full object-contain"
      controls
      playsinline
    >
      <source src="/videos/Rebirth of a Queen - Empowering Women and Communities - Non-Profit Organization Kenya.mp4" type="video/mp4">
    </video>
  </div>
</div>

<script>
  const playBtn = document.getElementById('playBtn');

  // Inline (mobile)
  const heroVideo = document.getElementById('heroVideo');
  const playIcon = document.getElementById('playIcon');
  const pauseIcon = document.getElementById('pauseIcon');
  const heroContent = document.getElementById('heroContent');
  const bottomCurve = document.getElementById('bottomCurve');
  const playText = document.getElementById('playText');

  // Modal (desktop)
  const modal = document.getElementById('videoModal');
  const modalVideo = document.getElementById('modalVideo');
  const closeModal = document.getElementById('closeModal');

  // Detect desktop
  const isDesktop = () => window.matchMedia('(min-width: 768px)').matches;

  playBtn.addEventListener('click', () => {

    /* ===========================
       DESKTOP → MODAL VIDEO
    ============================ */
    if (isDesktop()) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      modalVideo.currentTime = 0;
      modalVideo.volume = 0.8;
      modalVideo.play();
      document.body.style.overflow = 'hidden';
      return;
    }

    /* ===========================
       MOBILE → INLINE VIDEO
    ============================ */
    if (heroVideo.paused) {
      heroVideo.volume = 0.1;
      heroVideo.play();

      heroContent.querySelectorAll('h1').forEach(el =>
        el.classList.add('opacity-0', 'pointer-events-none')
      );
      playText.classList.add('opacity-0');
      bottomCurve.classList.add('translate-y-full');

      heroVideo.classList.remove('opacity-60');
      heroVideo.classList.add('opacity-100');

      playIcon.classList.add('hidden');
      pauseIcon.classList.remove('hidden');
    } else {
      heroVideo.pause();

      heroContent.querySelectorAll('h1').forEach(el =>
        el.classList.remove('opacity-0', 'pointer-events-none')
      );
      playText.classList.remove('opacity-0');
      bottomCurve.classList.remove('translate-y-full');

      heroVideo.classList.add('opacity-60');
      heroVideo.classList.remove('opacity-100');

      playIcon.classList.remove('hidden');
      pauseIcon.classList.add('hidden');
    }
  });

  /* ===========================
     MODAL CLOSE LOGIC
  ============================ */
  closeModal.addEventListener('click', closeVideoModal);
  modal.addEventListener('click', e => {
    if (e.target === modal) closeVideoModal();
  });

  function closeVideoModal() {
    modalVideo.pause();
    modalVideo.currentTime = 0;
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.body.style.overflow = 'auto';
  }
</script>


<section class="py-20 px-6 bg-white text-center">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-black text-black mb-8">
      About <span class="text-[#F9BC06]">Fitlife Communities</span>
    </h2>
    <p class="text-gray-600 text-sm md:text-base leading-relaxed font-medium">
      FitLife Communities is a community-based initiative dedicated to advancing holistic well-being, peacebuilding, and inclusive sports development among vulnerable and underserved populations. Established in 2023, FitLife Communities uses sport, fitness, and physical activity as powerful tools for healing, social cohesion, and economic empowerment. We work at the grassroots level to create safe, inclusive, and trauma-informed spaces where individuals and communities can build physical health, emotional resilience, leadership, and peaceful coexistence.
    </p>
  </div>
</section>

