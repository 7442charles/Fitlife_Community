        <img src="/images/plus.svg" alt="Vision" class="w-6 h-6 object-contain">
      </div>
      <div class="bg-white rounded-2xl shadow-[0_10px_40px_-15px_rgba(0,0,0,0.1)] p-8 text-left border-t-8 border-[#F9BC06]">
