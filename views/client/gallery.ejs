<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Basic Meta -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  <!-- Title -->
  <title>FitLife Community | Gallery of Fitness, Wellness & Events</title>

  <!-- SEO Meta -->
  <meta name="description" content="Explore the FitLife Community Gallery showcasing our fitness programs, events, and community activities. Get inspired and see how we empower wellness and healthy living." />
  <meta name="keywords" content="FitLife, fitness gallery, wellness community, events, gym, workouts, healthy living, community activities" />
  <meta name="author" content="FitLife Community" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content="FitLife Community | Gallery of Fitness, Wellness & Events" />
  <meta property="og:description" content="Explore the FitLife Community Gallery showcasing our fitness programs, events, and community activities." />
  <meta property="og:image" content="/images/logo.png" />
  <meta property="og:url" content="https://fitlifecommunity.com/gallery" />
  <meta property="og:site_name" content="FitLife Community" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="FitLife Community | Gallery of Fitness, Wellness & Events" />
  <meta name="twitter:description" content="Explore our community gallery featuring fitness programs, events, and wellness initiatives." />
  <meta name="twitter:image" content="/images/logo.png" />

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/logo.png" />
  <link rel="apple-touch-icon" href="/images/logo.png" />

  <!-- Theme Color -->
  <meta name="theme-color" content="#F8BD1D" />

  <!-- Tailwind CSS (Browser CDN) -->
  <script src="https://unpkg.com/@tailwindcss/browser@4" defer></script>
</head>

<body class="bg-gray-100">

<%- include('../partials/header') %>

<section class="max-w-7xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Gallery</h1>

<section class="max-w-7xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6 text-black">Gallery</h1>

  <div class="columns-1 sm:columns-2 md:columns-3 gap-6">
    <% for(let i = 0; i < 8; i++){
         const height = 200 + Math.floor(Math.random() * 200);
    %>
      <div class="mb-6 break-inside-avoid rounded overflow-hidden shadow-lg transition-transform hover:scale-105">
        <img 
          src="/images/fitness-wellmess.png" 
          class="w-full h-<%= height %> object-cover" 
          style="height:<%= height %>px;"
          alt="Gallery Image <%= i + 1 %>"
        >
      </div>
    <% } %>
  </div>
</section>



<%- include('../partials/footer') %>

</body>
</html>
