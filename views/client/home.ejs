  <meta property="og:site_name" content="Fitlife Community" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Fitlife Community | Fitness, Wellness & Healthy Living" />
  <meta 
    name="twitter:description" 
    content="Empowering individuals and communities through holistic fitness, wellness, and healthy living."
  />
  <meta name="twitter:image" content="/images/logo.png" />

  <!-- Favicon (using logo) -->
  <link rel="icon" type="image/png" href="/images/logo.png" />
  <link rel="apple-touch-icon" href="/images/logo.png" />

  <!-- Theme Color (Mobile browsers) -->
  <meta name="theme-color" content="#000000" />

  <!-- Tailwind CSS (Browser CDN) -->
  <script src="https://unpkg.com/@tailwindcss/browser@4" defer></script>
</head>

<body class="bg-gray-50 text-gray-900">

  <%- include('../partials/header') %>

    <section class="relative min-h-[85vh] md:min-h-[90vh] w-full flex items-center justify-center overflow-visible lg:overflow-hidden pt-24 md:pt-0">

    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-black/60 z-10"></div>
        <img 
