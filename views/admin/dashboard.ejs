
<!DOCTYPE html>
<html>
<head>
<script src="https://unpkg.com/@tailwindcss/browser@4"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
</head>
<body class="p-10">
<h1 class="text-3xl mb-4">Admin</h1>

<form method="POST" action="/admin/blog">
<input type="hidden" name="_csrf" value="<%= csrfToken %>">
<input name="title" class="border p-2 w-full mb-2">
<textarea id="editor" name="content"></textarea>
<button class="bg-black text-white px-4 py-2 mt-2">Add Blog</button>
</form>

<ul class="mt-6">
<% blogs.forEach(b=>{ %>
<li class="flex justify-between">
<%= b.title %>
<form method="POST" action="/admin/blog/<%= b.id %>/delete">
<input type="hidden" name="_csrf" value="<%= csrfToken %>">
<button class="text-red-500">Delete</button>
</form>
</li>
<% }) %>
</ul>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>$('#editor').summernote({height:200});</script>
</body>
</html>
